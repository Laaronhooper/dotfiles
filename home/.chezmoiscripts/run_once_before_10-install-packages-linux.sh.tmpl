{{ if eq .chezmoi.os "linux" -}}
{{ if eq .chezmoi.osRelease.id "debian" "ubuntu" -}}

{{ $packages := list
     "curl"
	 "direnv"
     "git-lfs"
     "jq"
     "ripgrep"
	 "units"
     "vim"
     "zsh" -}}
{{ $classicSnaps := list -}}

{{ if .isovalent -}}
{{   $packages = concat $packages (list
       "build-essential"
       "clang"
       "libelf-dev"
       "llvm"
       "protobuf-compiler"
       "python3-pip"
       "vagrant"
       "virtualbox") -}}
{{ end -}}

{{ if not .headless -}}
{{   $packages = mustAppend $packages "vim-gtk" -}}
{{   $classicSnaps = mustAppend $classicSnaps "code" -}}
{{ end -}}

{{ if .personal -}}
{{   $classicSnaps = mustAppend $classicSnaps "goreleaser" -}}
{{ end -}}

{{ $sudo := "sudo " -}}
{{ if eq .chezmoi.username "root" -}}
{{   $sudo = "" -}}
{{ end -}}

#!/bin/bash

set -eufo pipefail

{{ $sudo }}apt-get update
{{ $sudo }}apt-get install -y {{ $packages | join " " }}

{{ range $classicSnaps }}
{{ $sudo }}snap install --classic {{ . }}
{{ end }}

{{ if and (eq .chezmoi.arch "amd64") (not .headless) (not .ephemeral) }}
trap "rm -rf google-chrome-stable_current_amd64.deb" EXIT
wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
{{ $sudo }}apt install -y ./google-chrome-stable_current_amd64.deb
{{ end }}

{{ if .isovalent }}
go install github.com/onsi/ginkgo/ginkgo@latest
{{ end }}

{{ end -}}
{{ end -}}
